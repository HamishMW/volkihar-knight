<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://qconsulting.ca/fo3/ModConfig5.0.xsd">
  <moduleName>Volkihar Knight</moduleName>
  <moduleImage path="fomod\images\banner.jpg"/>

  <installSteps order="Explicit">
    <installStep name="Options">
      <optionalFileGroups>
        <group name="Main Options" type="SelectExactlyOne">
          <plugins order="Explicit">
            <plugin name="Heavy Armor Version">
              <description>
                <![CDATA[The default armor class. The armor rating of the set combined is equivalent to Ebony. It was designed to be used as heavy armor, but there is a version for light armor wearers who like the look of this armor.]]>
              </description>
              <image path="fomod\images\armor.jpg"/>
              <files>
                <folder source="data" destination="" priority="0"/>
              </files>
              <typeDescriptor>
                <type name="Optional"/>
              </typeDescriptor>
            </plugin>
            <plugin name="Light Armor Version">
              <description>
                <![CDATA[Light armor version. The armor rating and weight has been adjusted to make it behave like light armor, but the appearance is still the same.]]>
              </description>
              <image path="fomod\images\armor2.jpg"/>
              <files>
                <folder source="data" destination="" priority="0"/>
                <folder source="plugins\Volkihar Knight - Light Armor Option" destination="" priority="0"/>
              </files>
              <typeDescriptor>
                <type name="Optional"/>
              </typeDescriptor>
            </plugin>
          </plugins>
        </group>
        <group name="Patches" type="SelectAny">
          <plugins order="Explicit">
            <plugin name="Sacrosanct Patch">
              <description>
                <![CDATA[Select this option if you have Sacrosanct installed. This will allow the Abysswalker set bonus to work with Sacrosanct's weakness to sunlight effects.]]>
              </description>
              <image path="fomod\images\sacrosanct.jpg"/>
              <files>
                <folder source="plugins\Volkihar Knight - Sacrosanct Patch" destination="" priority="0"/>
              </files>
              <typeDescriptor>
                <dependencyType>
                  <defaultType name="Optional"/>
                    <patterns>
                      <pattern>
                        <dependencies operator="Or">
                          <fileDependency file="Sacrosanct - Vampires of Skyrim.esp" state="Active"/>
                        </dependencies>
                        <type name="Recommended"/>
                      </pattern>
                    </patterns>
                </dependencyType>
              </typeDescriptor>
            </plugin>
            <plugin name="Better Vampires Patch">
              <description>
                <![CDATA[Select this option if you use Better Vampires. This will allow the Abysswalker set bonus to work with the weakness to sunlight effects in Better Vampires. Note that this will only effect regeneration as per the effect description. If you've chosen the optional sunlight damage that will still apply.]]>
              </description>
              <image path="fomod\images\bettervampires.png"/>
              <files>
                <folder source="plugins\Volkihar Knight - Better Vampires Patch" destination="" priority="0"/>
              </files>
              <typeDescriptor>
                <dependencyType>
                  <defaultType name="Optional"/>
                    <patterns>
                      <pattern>
                        <dependencies operator="Or">
                          <fileDependency file="Better Vampires.esp" state="Active"/>
                        </dependencies>
                        <type name="Recommended"/>
                      </pattern>
                    </patterns>
                </dependencyType>
              </typeDescriptor>
            </plugin>
          </plugins>
        </group>
      </optionalFileGroups>
    </installStep>
  </installSteps>

</config>
